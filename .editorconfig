root = true

[*]
charset = utf-8
end_of_line = lf

[*.{css, scss, js, jsx, ts, tsx}]
indent_size = 2
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[*.php]
indent_size = 4
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[*.xml]
indent_size = 4
indent_style = space
trim_trailing_whitespace = true

[*.{json,yaml,yml}]
indent_size = 2
indent_style = space
trim_trailing_whitespace = true